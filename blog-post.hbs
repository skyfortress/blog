---
layout: page.hbs
pagination:
    data: blog
    size: 1
    alias: post
permalink: "blog/{{ post.slug }}/"
---
{{> sidebar }}
<main class="articles">
    <article>
        <div class="heading">
            <div class="date">
                <span>10</span>
                Окт
            </div>
            <a class="title">
                {{ post.title }}
            </a>
        </div>
        <div class="image">
            <img src="https://placehold.co/630x250" style="max-width: 100%" height="250" />
        </div>
        <div class="desc">
            {{{ post.content_html }}}
        </div>
        <div class="info">
            <span class="comments">0 отзывов</span>
            <span class="views">0 просмотров</span>
            <span class="tag">
                    <a href="#">Другое</a>
            </span>
        </div>
    </article>
    <div id="disqus_thread"></div>
    <script type="text/javascript">
        var disqus_identifier = '{{post.slug}}';
        var disqus_shortname = 'sky4tress'; // required: replace example with your forum shortname

        (function() {
            var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
            dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
            (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
        })();
    </script>
    <noscript>Please enable JavaScript to view the <a href="http://disqus.com/?ref_noscript">comments powered by Disqus.</a></noscript>
    <div style="height: 150px"></div>
</main>